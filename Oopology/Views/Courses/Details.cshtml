            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>
    </div>
</>
</tr>
</table>
<div>
<button class="add-to-cart-button">
    <svg class="add-to-cart-box box-1"
         width="24"
         height="24"
         viewBox="0 0 24 24"
         fill="none"
         xmlns="http://www.w3.org/2000/svg">
        <rect width="24" height="24" rx="2" fill="#ffffff" />
    </svg>
    <svg class="add-to-cart-box box-2"
         width="24"
         height="24"
         viewBox="0 0 24 24"
         fill="none"
         xmlns="http://www.w3.org/2000/svg">
        <rect width="24" height="24" rx="2" fill="#ffffff" />
    </svg>
    <svg class="cart-icon"
         xmlns="http://www.w3.org/2000/svg"

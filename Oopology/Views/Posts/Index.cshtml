@model IEnumerable<Oopology.Models.Post>
@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Posts";

}

<h2>Posts</h2>

<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User.Name</td>
                <td>@item.Content</td>
            </tr>
        }
    </tbody>
</table>

<form action="/posts" method="post">
  <input type="text" name="content"/>
  <input type="submit" value="Submit"/>
</form>
